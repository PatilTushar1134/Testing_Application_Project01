@model Testing_Application_Project.Models.Po_Hedar_Model


<script>
    async function GetContact() {
        let supplier_id = document.getElementById("supplierid")
        //console.log(supplier_id)
        let url = "/Po_Hedar_Line/GetSupplierDetails?supplierid=" + supplier_id.value
        const Response = await fetch(url)
        const Result = await Response.json()

        document.getElementById("supplierContact").value = Result.contact;
        document.getElementById("supplierEmail").value = Result.Email

    }
</script>

<h2 class="text-center bg-dark text-white">Header Information</h2>
<div class="row">
    <div class="col-md-3">
        <label>Po Date</label>
        @Html.TextBoxFor(m => m.PoDate, new { @class = "form-control", type = "Date" })
    </div>
    <div class="col-md-3">
        <label>Supplier Name</label>
        @Html.DropDownListFor(m => m.supplier_id, new SelectList(ViewBag.supplier, "Value", "Text"), new { @class = "form-control", id = "supplierid", OnChange = "GetContact()" })
    </div>
    <div class="col-md-3">
        <label>Supplier Contact</label>
        <input type="text" id="supplierContact" class="form-control" readonly="readonly" />
    </div>
    <div class="col-md-3">
        <label>Supplier Email</label>
        <input type="text" id="supplierEmail" class="form-control" readonly="readonly" />
    </div>
</div>